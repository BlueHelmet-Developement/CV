@using CV.Models
@using System.Globalization

<div class="job">
    <div class="period">
        <p>
            <span>@Job.StartDate.ToString("MMM yyyy", new CultureInfo("da-DA"))</span> - <span>@Job.SlutDate.ToString("MMM yyyy", new CultureInfo("da-DA"))</span>
        </p>
    </div>
    <div class="details">
        <div class="job-header">
            @if (Job.Titler is not null) {
                <span class="job-title">@String.Join(", ", Job.Titler)</span>
            }
            <span class="firma">@Job.Firma</span>
        </div>
        <div class="taglines">
            @if (Job.TagLines != null && Job.TagLines.Count > 0)
            {
                @foreach (var tagline in Job.TagLines)
                {
                    <div class="tagline">@tagline</div>
                }
            }
        </div>
        <div class="inline-list">
            @if (Job.Teknologier != null && Job.Teknologier.Count > 0)
            {
                @foreach (var technology in Job.Teknologier)
                {
                    <span>@technology</span>
                }
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public Job Job { get; set; } = new();
}